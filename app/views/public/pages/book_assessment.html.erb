<!-- Contact Options -->
<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <!-- WhatsApp -->
        <a href="https://wa.me/27615143028" target="_blank" rel="noopener noreferrer" class="bg-green-50 border-2 border-green-200 rounded-xl p-8 hover:shadow-xl transition-all hover:border-green-400">
          <div class="flex items-center justify-center mb-4">
            <svg class="w-16 h-16 text-green-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2 text-center">WhatsApp Nicole</h3>
          <p class="text-gray-600 text-center mb-4">Quick response via WhatsApp</p>
          <p class="text-green-600 font-semibold text-center">+27 61 514 3028</p>
        </a>

        <!-- Phone -->
        <div class="bg-indigo-50 border-2 border-indigo-200 rounded-xl p-8">
          <div class="flex items-center justify-center mb-4">
            <svg class="w-16 h-16 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2 text-center">Call Us</h3>
          <p class="text-gray-600 text-center mb-4">Speak directly with our team</p>
          <div class="space-y-2 text-center">
            <p><a href="tel:+27615143028" class="text-indigo-600 font-semibold hover:text-indigo-700">Nicole: +27 61 514 3028</a></p>
            <p><a href="tel:+27796216876" class="text-indigo-600 font-semibold hover:text-indigo-700">Jazzmyn: +27 79 621 6876</a></p>
          </div>
        </div>
      </div>

      <!-- Email Contact Form -->
      <div class="bg-gray-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">Or Send Us a Message</h3>
        <%= form_with url: public_contact_forms_path, method: :post, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :name, "Your Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
            <div>
              <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.email_field :email, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :phone, "Phone Number", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.telephone_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
            <div>
              <%= f.label :subject, "Subject", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.select :subject, [
                ["Free Assessment Booking", "assessment"],
                ["General Inquiry", "general"],
                ["Pricing Information", "pricing"],
                ["Other", "other"]
              ], {}, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          </div>

          <div>
            <%= f.label :message, "Message", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.text_area :message, rows: 6, required: true, placeholder: "Tell us about your learning goals, preferred subjects, and any questions you have...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          </div>

          <div class="text-center">
            <%= f.submit "Send Message", class: "px-8 py-4 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-semibold text-lg cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Additional Info -->
      <div class="mt-12 text-center">
        <p class="text-gray-600 mb-4">We typically respond within 24 hours</p>
        <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            No commitment required
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Free assessment session
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Personalized learning plan
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
