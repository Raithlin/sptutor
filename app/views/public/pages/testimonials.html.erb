<!-- Hero Section -->
<section class="bg-gradient-to-br from-indigo-600 to-purple-600 text-white py-20">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold mb-6">Success Stories</h1>
    <p class="text-xl text-indigo-100 max-w-3xl mx-auto">
      Read what parents and students have to say about their experience with Smarty Pants Tutoring.
    </p>
  </div>
</section>

<!-- Testimonials Grid -->
