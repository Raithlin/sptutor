<div class="min-h-screen">
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-accent to-primary py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl font-bold text-primary-content text-center">Contact Us</h1>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 bg-base-100">
    <div class="container mx-auto px-4 max-w-2xl">
      
      <% if flash[:notice] %>
        <div class="alert alert-success mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= flash[:notice] %></span>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-error mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4">Get in Touch</h2>
          <p class="mb-6">
            Fill out the form below and we'll get back to you as soon as possible via WhatsApp.
          </p>

          <%= form_with url: public_contact_forms_path, method: :post, class: "space-y-4" do |f| %>
            
            <!-- Name -->
            <div class="form-control">
              <%= f.label :name, class: "label" do %>
                <span class="label-text">Your Name <span class="text-error">*</span></span>
              <% end %>
              <%= f.text_field :name, required: true, class: "input input-bordered w-full", placeholder: "John Doe" %>
            </div>

            <!-- Email -->
            <div class="form-control">
              <%= f.label :email, class: "label" do %>
                <span class="label-text">Email Address <span class="text-error">*</span></span>
              <% end %>
              <%= f.email_field :email, required: true, class: "input input-bordered w-full", placeholder: "john@example.com" %>
            </div>

            <!-- Phone -->
            <div class="form-control">
              <%= f.label :phone, class: "label" do %>
                <span class="label-text">Phone Number <span class="text-error">*</span></span>
              <% end %>
              <%= f.telephone_field :phone, required: true, class: "input input-bordered w-full", placeholder: "+27 12 345 6789" %>
            </div>

            <!-- Message -->
            <div class="form-control">
              <%= f.label :message, class: "label" do %>
                <span class="label-text">Message <span class="text-error">*</span></span>
              <% end %>
              <%= f.text_area :message, required: true, rows: 5, class: "textarea textarea-bordered w-full", placeholder: "Tell us about your tutoring needs..." %>
            </div>

            <!-- Submit Button -->
            <div class="form-control mt-6">
              <%= f.submit "Send Message", class: "btn btn-primary btn-block" %>
            </div>

          <% end %>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="text-center mt-12">
        <p class="text-lg mb-4">
          Or reach out to us directly:
        </p>
        <div class="flex flex-col gap-2">
          <a href="tel:+27123456789" class="link link-primary">üìû +27 12 345 6789</a>
          <a href="mailto:info@smartypantstutoring.com" class="link link-primary">‚úâÔ∏è info@smartypantstutoring.com</a>
        </div>
      </div>

    </div>
  </section>
</div>
