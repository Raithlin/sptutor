<nav class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2 text-xl font-bold text-indigo-600 hover:text-indigo-700" do %>
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="currentColor" opacity="0.3"/>
            <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Smarty Pants Tutoring</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <%= link_to "Home", root_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "How It Works", how_it_works_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Meet Our Team", tutors_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Blog", blog_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:flex items-center space-x-3">
        <%= link_to "Book Free Assessment", book_assessment_path, class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-semibold" %>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden p-2 text-gray-700 hover:text-indigo-600" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="hidden md:hidden mt-4 pb-4 border-t pt-4" id="mobile-menu">
      <div class="flex flex-col space-y-3">
        <%= link_to "Home", root_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "How It Works", how_it_works_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Meet Our Team", tutors_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Blog", blog_path, class: "text-gray-700 hover:text-indigo-600 transition-colors" %>
        <div class="border-t pt-3 mt-3">
          <%= link_to "Book Free Assessment", book_assessment_path, class: "block px-4 py-2 text-center bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-semibold" %>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
