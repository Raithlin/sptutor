<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold">Administrator Dashboard</h1>
    <p class="text-gray-600 mt-2">Welcome back, <%= @user.full_name %>!</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Stats Card -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title text-sm">Total Users</h2>
        <p class="text-4xl font-bold text-primary"><%= User.count %></p>
        <p class="text-sm text-gray-600">All users</p>
      </div>
    </div>

    <!-- Stats Card -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title text-sm">Tutors</h2>
        <p class="text-4xl font-bold text-secondary"><%= User.tutor.count %></p>
        <p class="text-sm text-gray-600">Active tutors</p>
      </div>
    </div>

    <!-- Stats Card -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title text-sm">Students</h2>
        <p class="text-4xl font-bold text-accent"><%= User.student.count %></p>
        <p class="text-sm text-gray-600">Active students</p>
      </div>
    </div>

    <!-- Stats Card -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title text-sm">Parents</h2>
        <p class="text-4xl font-bold text-info"><%= User.parent.count %></p>
        <p class="text-sm text-gray-600">Active parents</p>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title">Quick Actions</h2>
        <div class="flex flex-wrap gap-2 mt-4">
          <button class="btn btn-primary">Create User</button>
          <button class="btn btn-secondary">Manage Classes</button>
          <button class="btn btn-accent">View Reports</button>
        </div>
      </div>
    </div>
  </div>
</div>
